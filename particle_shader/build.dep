include('../glfw_example/deps/build.dep');

register({
  id: 'boost',
  language: 'c++',
  type: 'external',
  libs: ['boost_system-mt']
});

register({
  id: 'armadillo',
  language: 'c++',
  type: 'external',
  libs: ['armadillo']
});

register({
  id: 'lapack',
  language: 'c++',
  type: 'external',
  libs: ['lapack'],
  libdirs: ['/usr/lib/lapack']
});

register({
  id: 'glew',
  language: 'c++',
