register({
  id: 'x11',
  language: 'c++',
  type: 'pkgconfig'
});

register({
  id: 'xrandr',
  language: 'c++',
  type: 'pkgconfig'
});

register({
  id: 'xxf86vm',
  language: 'c++',
  type: 'pkgconfig'
});

register({
  id: 'glu',
  language: 'c++',
  type: 'pkgconfig'
});

register({
  id: 'XInput',
  language: 'c++',
  type: 'external',
  libs: ['Xi']
});

register({
  id: 'GlfwGit',
  type: 'scm',
  git: {
    repo: 'https://github.com/elmindreda/glfw.git',
    branch: 'master',
    target: 'glfw'
  }
});

register({
  id: 'glfw3',
  language: 'c++',
  type: 'cmake',
  deps: ['GlfwGit'],
  base: env.base + '/glfw',
  libs: ['glfw3', 'rt'],
  deps: ['x11', 'xrandr', 'xxf86vm', 'glu', 'XInput']
});
