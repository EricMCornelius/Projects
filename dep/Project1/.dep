register({
  id: 'proj1.publish',
  type: 'template',
  subtype: 'publish',
  source: 'include/*',
  target: 'install/include/${file}.h'
});

register({
  id: 'proj1.compile',
  type: 'template',
  subtype: 'compile',
  source: 'src/*.cpp',
  target: 'build/${file}.o',
  deps: ['test.publish']
});

register({
  id: 'proj1.link',
  type: 'link',
  source: 'build/*.o',
  target: 'install/lib/proj1',
  deps: ['proj1.compile', 'test.link', 'boost']
});