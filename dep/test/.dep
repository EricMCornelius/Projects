register({
  id: 'test.publish',
  type: 'template',
  subtype: 'publish',
  source: 'include/*.h',
  target: 'install/include/${file}.h',
  deps: []
});

register({
  id: 'test.compile',
  type: 'template',
  subtype: 'compile',
  source: 'src/*.cpp',
  target: 'build/${file}.o',
  deps: ['test.publish']
});

register({
  id: 'test.link',
  type: 'link',
  subtype: 'shared',
  source: 'build/*.o',
  target: 'install/lib/test',
  deps: ['test.compile']
});