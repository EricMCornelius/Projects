register({
  id: 'LdcGit',
  type: 'scm',
  git: {
    repo: 'https://github.com/ldc-developers/ldc.git',
    branch: 'master',
    target: 'build'
  },
  submodule: true
});

register({
  id: 'ldc',
  language: 'c++',
  type: 'cmake',
  deps: ['LdcGit'],
  defines: {
    'CMAKE_EXE_LINKER_FLAGS': '-L/lib/x86_64-linux-gnu -ldl',
    'CMAKE_VERBOSE_MAKEFILE': 'true'
  },
  base: env.base + '/build'
});
